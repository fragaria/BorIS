#!/bin/bash

# uncomment to see debug output
set -x
set -e

DIRECTORY=$(cd `dirname $0` && pwd)
source $DIRECTORY/refresh_db_settings

echo -e "SET foreign_key_checks=0;\n`mysqldump $MYSQL_OPTIONS --add-drop-table --no-data`\nSET foreign_key_checks=1;" | grep -E "^(SET|DROP)" | mysql $MYSQL_OPTIONS;

#django-admin.py syncdb --migrate --noinput && django-admin.py loaddata test_data
#django-admin.py syncdb --noinput && django-admin.py loaddata ../dev/test_data.json
mysql $MYSQL_OPTIONS < $DIRECTORY/../dev/test_db.sql
